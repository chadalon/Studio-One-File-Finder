<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Studio_One_File_Finder.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="0">
            <Grid
            Padding="30,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                Grid.Row="0"
                Text="Studio One File Finder"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

                <Label
                Grid.Row="1"
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackLayout
                        Grid.Column="0"
                        Padding="20">
                        <Label
                            Text="Sample Locations:"
                            Style="{StaticResource SubHeadline}"
                            SemanticProperties.HeadingLevel="Level2" />
                        <CollectionView ItemsSource="{Binding SampleFolders, Mode=TwoWay}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout
                                        Padding="0,20">
                                        <Label
                                            Text="{Binding IndexInCollectionPlusOne, StringFormat='Folder {0}:'}"
                                            SemanticProperties.HeadingLevel="Level3" />
                                        <HorizontalStackLayout>
                                            <Entry
                                            Unfocused="LocationEntry_Unfocused"
                                            x:Name="LocationEntry"
                                            Placeholder="Enter location"
                                            Text="{Binding FolderPath, Mode=TwoWay}" />
                                            <Button
                                            Text="Browse"
                                            Clicked="OnBrowseClicked" />
                                            <Button
                                            Text="Delete"
                                            Clicked="OnDeleteSampleDirClicked" />

                                        </HorizontalStackLayout>
                                    </StackLayout>

                                </DataTemplate>

                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Button
                        Text="Add Another Sample Directory"
                        Clicked="OnAddSampleDirClicked" />
                    </StackLayout>

                    <StackLayout
                    Grid.Column="1"
                    Padding="20">
                        <Label
                        Text="Project Locations:"
                        Style="{StaticResource SubHeadline}"
                        SemanticProperties.HeadingLevel="Level2" />
                        <Label
                        Text="Make sure to only choose folders that immediately contain other song folders (for example: Studio One/Songs)" />
                        <CollectionView ItemsSource="{Binding ProjectFolders, Mode=TwoWay}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout
                                    Padding="0,20">
                                        <Label
                                            Text="{Binding IndexInCollectionPlusOne, StringFormat='Folder {0}:'}"
                                            SemanticProperties.HeadingLevel="Level3" />
                                        <HorizontalStackLayout>
                                            <Entry
                                            Unfocused="LocationEntry_Unfocused"
                                            x:Name="LocationEntry"
                                            Placeholder="Enter location"
                                            Text="{Binding FolderPath, Mode=TwoWay}" />
                                            <Button
                                            Text="Browse"
                                            Clicked="OnBrowseClicked" />
                                            <Button
                                            Text="Delete"
                                            Clicked="OnDeleteProjectDirClicked" />

                                        </HorizontalStackLayout>
                                    </StackLayout>

                                </DataTemplate>

                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Button
                        Text="Add Another Project Directory"
                        Clicked="OnAddProjectDirClicked" />
                    </StackLayout>
                </Grid>
                <!--<Button
                Grid.Row="2"
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />-->
            </Grid>
        </ScrollView>
        <Button Grid.Row="1"
            Text="Help meee" />
    </Grid>

</ContentPage>
